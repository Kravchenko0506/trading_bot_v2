# .env.example
# Copy this file to .env and fill in your actual values

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true  # Set to false for live trading

# Database Configuration (optional, defaults to SQLite)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/trading_bot
# DATABASE_URL=sqlite+aiosqlite:///data/trading_bot.db

# Telegram Bot (for future Telegram integration)
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321

# Application Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Security (for production)
# SECRET_KEY=your_secret_key_for_production
# ALLOWED_HOSTS=localhost,127.0.0.1

# Trading Settings (optional overrides)
# MAX_POSITION_SIZE=100
# DEFAULT_STOP_LOSS=-0.02
# DEFAULT_TAKE_PROFIT=0.05